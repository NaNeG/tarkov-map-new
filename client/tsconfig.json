{
	"compilerOptions": {
		"sourceMap": true,
		"outDir": "dist",
		"strict": true,
		"lib": ["esnext", "dom", "dom.iterable"],
		"esModuleInterop": true,
		"target": "es2020",
		"allowJs": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
    "jsx": "react-jsx",
		"incremental": true
	},
	"include": ["src"]
}
